<StackPanel x:Class="FinanceWindows.OptionsPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#F98866">
    <StackPanel Margin="3 3 3 3">
        <Button Content="Add/Edit Securities"
                Command="{Binding OpenSecurityEditWindowCommand}"
                Margin="10 10 10 10"></Button>
        <Button Content="Add/Edit BankAccounts"
                Command="{Binding OpenBankAccountEditWindowCommand}"
                Margin="10 10 10 10"></Button>
        <Button Content="Add/Edit Sector"
                Command="{Binding OpenSectorEditWindowCommand}"
                Margin="10 10 10 10"></Button>
        <Button Content="Statistics Creator"
                Command="{Binding OpenStatsCreatorWindowCommand}"
                Margin="10 10 10 10"></Button>
        <Button Content="Save Database"
                Command="{Binding SaveDatabaseCommand}"
                Margin="10 10 10 10"></Button>
    </StackPanel>
</StackPanel>
