<Grid x:Class="FinanceWindows.OptionsPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#F98866"
      Width="130">
    <StackPanel Margin="3 3 3 3">
        <Button Content="Securities Edit"
                Command="{Binding OpenSecurityEditWindowCommand}"
                Margin="10 10 10 10"/>
        <Button Content="BankAccount Edit"
                Command="{Binding OpenBankAccountEditWindowCommand}"
                Margin="10 10 10 10"/>
        <Button Content="Sector Edit"
                Command="{Binding OpenSectorEditWindowCommand}"
                Margin="10 10 10 10"/>
        <Button Content="Stats Creator"
                Command="{Binding OpenStatsCreatorWindowCommand}"
                Margin="10 10 10 10"/>
        <Button Content="Save Database"
                Command="{Binding SaveDatabaseCommand}"
                Margin="10 10 10 10"/>
        <Button Content="Load Database"
                Command="{Binding LoadDatabaseCommand}"
                Margin="10 10 10 10"/>
        <Button Content="Update Data"
                Command="{Binding UpdateDataCommand}"
                Margin="10 10 10 10"/>
    </StackPanel>
</Grid>
