<Grid x:Class="FinanceWindows.ReportingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:cl="clr-namespace:GuiSupport"
      mc:Ignorable="d"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">
    
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="{Binding Source={x:Static cl:Colours.BackgroundSecondaryBrush}}"
              Grid.Column="0">
        <StackPanel 
                    VerticalAlignment="Top">
            <TextBlock Margin="10 10 10 10" Text="Error Reports"/>
            <Button Style="{StaticResource ResourceKey=defaultButton}"
                    Content="Clear Reports"
                    Command="{Binding ClearReportsCommand}"/>
            <Button Content="Clear Selected"
                    Style="{StaticResource ResourceKey=defaultButton}"
                    Command="{Binding ClearSingleReportCommand}"/>
        </StackPanel>
        </Grid>
        <ListView Name="SecBox"
                  ItemsSource="{Binding ReportsToView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Grid.Column="1"
                  Margin="10 10 10 10"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" 
                                    DisplayMemberBinding="{Binding ErrorType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <GridViewColumn Header="Message" 
                                    DisplayMemberBinding="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Grid>
