<UserControl x:Class="FPD.UI.Windows.HtmlStatsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wb="clr-namespace:Common.UI.Wpf.Controls;assembly=Common.UI.Wpf"
             xmlns:viewmodels="clr-namespace:FPD.Logic.ViewModels;assembly=FPD.Logic"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             d:DataContext="{d:DesignInstance Type=viewmodels:HtmlStatsViewerViewModel}"
             mc:Ignorable="d"
             FontFamily="{Binding Styles.FontFamily}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Width="Auto"
          Height="Auto"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"
          Background="{Binding Styles.BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Style="{StaticResource ResourceKey=defaultButton}"
                Grid.Row="0"
                Margin="5 5 5 5"
                Content="HTML Stats to Display"
                Command="{Binding FileSelect}" />
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="5 5 5 5"
                 TextAlignment="Left"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 VerticalContentAlignment="Center"
                 Text="{Binding DisplayStats}" />
        <wpf:WebView2 Grid.Row="1"
                      Grid.Column="0"
                      Width="Auto"
                      Height="Auto"
                      Grid.ColumnSpan="2"
                      wb:WebBrowserBehaviours.BindableSource="{Binding DisplayStats}"/>
    </Grid>
</UserControl>
