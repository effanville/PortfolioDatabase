<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background"
                Value="{Binding Styles.BackgroundBrush}" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid ClipToBounds="true"
                          SnapsToDevicePixels="true"
                          KeyboardNavigation.TabNavigation="Local">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="0" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                  Grid.Column="0"
                                  IsItemsHost="true"
                                  Grid.Row="0"
                                  KeyboardNavigation.TabIndex="1" />
                        <Border x:Name="ContentPanel"
                                Background="{TemplateBinding Background}"
                                Grid.Column="0"
                                KeyboardNavigation.DirectionalNavigation="Contained"
                                Grid.Row="1"
                                KeyboardNavigation.TabIndex="2"
                                KeyboardNavigation.TabNavigation="Local">
                            <ContentPresenter ContentSource="SelectedContent"
                                              Margin="{TemplateBinding Padding}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DefaultTabItemStyle"
           TargetType="TabItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Name="Border"
                            MinHeight="20"
                            MaxHeight="26"
                            MinWidth="20"
                            BorderThickness="3,3,3,0"
                            BorderBrush="{Binding Styles.BackgroundBrush}"
                            Margin="1,5,1,0"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal"
                                    MinHeight="20"
                                    VerticalAlignment="Center"
                                    Margin="3">
                            <TextBlock Name="HeaderText"
                                       Text="{Binding Header}"
                                       VerticalAlignment="Center"
                                       FontSize="{Binding Styles.MediumFontSize}"
                                       Foreground="{Binding Styles.ForegroundBrush}"
                                       HorizontalAlignment="Center" />
                            <Button Background="Transparent"
                                    Foreground="{Binding Styles.ForegroundBrush}"
                                    Visibility="{Binding Closable, Converter={StaticResource BoolToVis}}"
                                    Height="12"
                                    Width="12"
                                    MinWidth="12"
                                    MaxWidth="12"
                                    Margin="2 2 0 0"
                                    Command="{Binding CloseCommand}">
                                <Grid Width="10"
                                      Height="10"
                                      UseLayoutRounding="True"
                                      RenderTransform="1,0,0,1,.5,.5">
                                    <Path Data="M0,-1 L8,7 M8,-1 L0,7"
                                          Width="8"
                                          Height="8"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}, Mode=FindAncestor}}"
                                          StrokeThickness="1" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="{Binding Styles.HighlightBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="{Binding Styles.BackgroundBrush}" />
                            <Setter TargetName="HeaderText"
                                    Property="FontWeight"
                                    Value="SemiBold" />
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="False">
                            <Setter TargetName="Border"
                                    Property="Background"
                                    Value="{Binding Styles.BackgroundSecondaryBrush}" />
                            <Setter TargetName="HeaderText"
                                    Property="FontWeight"
                                    Value="Normal" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="TabItem"
           BasedOn="{StaticResource DefaultTabItemStyle}" />
</ResourceDictionary>